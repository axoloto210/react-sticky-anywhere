{
  "name": "react-sticky-anywhere",
  "version": "0.1.0",
  "description": "A React hook that provides position:sticky behavior using Intersection Observer and position:fixed, unaffected by ancestor overflow properties",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "keywords": [
    "react",
    "sticky",
    "position-sticky",
    "intersection-observer",
    "fixed",
    "overflow",
    "hook"
  ],
  "author": "うぱ (https://github.com/axoloto210/)",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}